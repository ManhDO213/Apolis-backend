<div class="content-page">
    <div class="content">
        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-body-action-course">
                                <h4 class="header-title mt-0 mb-3">Danh sách học viên</h4>
                                <div class="card-body-action-right">
                                        <% if ( status==="ACTIVE" ) { %>
                                            <a href="/admin/student/list-student?status=DEACTIVE">
                                                <button type="button"
                                                    class="btn btn-danger waves-effect waves-light mr-1 <%= status === 'DEACTIVE' ? 'active' : '' %>">Danh
                                                    sách khóa</button>
                                            </a>
                                            <% } else { %>
                                                <a href="/admin/student/list-student?status">
                                                    <button type="button"
                                                        class="btn btn-success waves-effect waves-light mr-1 <%= status === 'ACTIVE' ? 'active' : '' %>">Danh
                                                        sách mở</button>
                                                </a>
                                                <% } %>
                                                        <a data-toggle="modal" data-target="#createModal">
                                                            <button type="button"
                                                                class="btn btn-success waves-effect waves-light mr-1"
                                                                data-toggle="modal" data-target="createModal">Thêm
                                                                mới</button>
                                                        </a>
                                                        <!-- Create-Modal -->
                                                        <div class="modal" id="createModal">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <!-- Modal Header -->
                                                                    <div class="modal-header">
                                                                        <h4 class="modal-title">Thêm mới học viên</h4>
                                                                        <button type="button" class="close"
                                                                            data-dismiss="modal">&times;</button>
                                                                    </div>

                                                                    <!-- Modal body -->
                                                                    <div class="modal-body">
                                                                        <form id="uploadForm">
                                                                            <div class="form-group">
                                                                                <div class="form-group">
                                                                                    <label for="name">Họ và tên</label>
                                                                                    <input type="text"
                                                                                        class="form-control"
                                                                                        placeholder="Họ và tên"
                                                                                        id="name" name="name">
                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label for="email">Email</label>
                                                                                <input type="email" class="form-control"
                                                                                    placeholder="Email" id="email"
                                                                                    name="email" required>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label for="password">Mật khẩu</label>
                                                                                <input type="password"
                                                                                    class="form-control"
                                                                                    placeholder="Password" id="password"
                                                                                    name="password">
                                                                            </div>
                                                                            <div class="row">
                                                                                <div class="col-lg-6 col-6 form-group">
                                                                                    <label for="phoneNumber">Số điện
                                                                                        thoại</label>
                                                                                    <input type="text"
                                                                                        class="form-control"
                                                                                        placeholder="Số điện thoại"
                                                                                        id="phoneNumber"
                                                                                        name="phoneNumber">
                                                                                </div>
                                                                                <div class="col-lg-6 col-6 form-group">
                                                                                    <label for="status">Giới
                                                                                        tính</label>
                                                                                    <select class="form-control select2"
                                                                                        style="width: 100%;"
                                                                                        name="gender" id="gender">
                                                                                        <option selected="selected"
                                                                                            value="MALE">Nam
                                                                                        </option>
                                                                                        <option value="FEMALE">Nữ
                                                                                        </option>
                                                                                    </select>
                                                                                </div>
                                                                            </div>

                                                                        </form>
                                                                    </div>
                                                                    <!-- Modal footer -->
                                                                    <div class="modal-footer">
                                                                        <button type="button"
                                                                            class="btn btn-outline-danger"
                                                                            data-dismiss="modal">Huỷ</button>
                                                                        <button type="submit" class="btn btn-success"
                                                                            id="submitCreate">Thêm
                                                                            mới</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!-- end-modal-create -->
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th class="col-course-id">#</th>
                                            <th class="col-course-name">Ảnh</th>
                                            <th class="col-course-start">Tên giảng viên</th>
                                            <th class="col-course-end">Email</th>
                                            <th class="col-course-category">Số điện thoại</th>
                                            <th class="col-course-fee">Trạng thái</th>
                                            <th class="col-course-detail"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% listAccount.forEach((row, index)=> { %>
                                            <tr class="<%= status === 'DEACTIVE' ? 'show active' : '' %>">
                                                <td class="col-course-id">
                                                    <%= index=index + 1 %>
                                                </td>
                                                <td class="col-course-name">
                                                    <a href="<%= row.profile.avatarUrl %>">
                                                        <img src="<%= row.profile.avatarUrl %>"
                                                            class="avatar-md rounded" alt="Avatar">
                                                    </a>
                                                </td>
                                                <td class="col-course-start">
                                                    <%= row.profile.name %>
                                                </td>
                                                <td class="col-course-end">
                                                    <%= row.account.email %>
                                                </td>
                                                <td class="col-course-category">
                                                    <%= row.account.phoneNumber %>
                                                </td>
                                                <td class="col-course-fee">

                                                    <% if (row.account.status==="ACTIVE" ) { %>
                                                        <span class="badge badge-success">Đang hoạt động</span>
                                                        <% } else { %>
                                                            <span class="badge badge-danger">Đã bị khóa</span>
                                                            <% } %>
                                                </td>
                                                <td class="col-course-detail"><a
                                                        href="/admin/student/detail-student/<%= row.account._id %>">Chi
                                                        tiết</a></td>
                                            </tr>

                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled">
                            <a class="page-link" href="javascript: void(0);" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="javascript: void(0);">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="javascript: void(0);">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="javascript: void(0);">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="javascript: void(0);">Next</a>
                        </li>
                    </ul>


                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->

</div>
<script>
    var isSuccess = false;
    const form = document.getElementById('uploadForm');
    const upload = document.getElementById('submitCreate');
    upload.addEventListener('click', function (event) {
        event.preventDefault();
        const baseURL = window.location.protocol + '//' + window.location.host;
        var objectJson = {};

        const teacherName = document.getElementById('name');
        objectJson.name = teacherName.value;

        const teacheEmail = document.getElementById('email');
        objectJson.email = teacheEmail.value;

        const teacherPassword = document.getElementById('password');
        objectJson.password = teacherPassword.value;

        const teacherPhoneNumber = document.getElementById('phoneNumber');
        objectJson.phoneNumber = teacherPhoneNumber.value;

        const teacherGender = document.getElementById('gender');
        objectJson.gender = teacherGender.value;

        showLoading();
        fetch(`${baseURL}/admin/teacher/add-account-teacher`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(objectJson)
        }).then(response => {
            response.json().then(body => {
                const statusCode = response.status;
                if (statusCode == 200) {
                    isSuccess = true;
                } else {
                    isSuccess = false;
                }
                hideLoading();
                showDialog(body.message);
            });
        }).catch(error => {
            isSuccess = false;
            hideLoading();
            showDialog('Lỗi: ' + error);
            console.error(error);
        });
    });

    function showLoading() {
        document.getElementById("loading").style.display = "block";
    }

    function hideLoading() {
        document.getElementById("loading").style.display = "none";
    }

    function showDialog(message) {
        document.getElementById("dialog-message").textContent = message;
        document.getElementById("dialog").style.display = "block";
    }

    function hideDialog() {
        document.getElementById("dialog").style.display = "none";
        if (isSuccess) {
            form.reset();
            isSuccess = false;
        }
    }
</script>