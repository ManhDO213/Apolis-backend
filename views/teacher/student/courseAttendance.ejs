<div class="content-page">
    <div class="content">
  
        <!-- Start Content-->
        <div class="container-fluid">
  
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-body-action-course">
                                <h4 class="header-title mt-0 mb-3">Danh sách khóa học</h4>
                            </div>
  
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th class="col-course-id">#</th>
                                            <th class="col-course-name">Tên khóa học</th>
                                            <th class="col-course-start">Từ ngày</th>
                                            <th class="col-course-end">Kết thúc</th>
                                            <th class="col-course-category">Thể loại</th>
                                            <th class="col-course-fee">Học phí</th>
                                            <th class="col-course-detail"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% let index=1; %>
                                            <% listCourseData.forEach((row)=> { %>
                                                <tr>
                                                    <td class="col-course-id"> 
                                                     <%= index %>
                                                    </td>
                                                    <td class="col-course-name"><%= row.name %></td>
                                                    <td class="col-course-start">
                                                        <% const formatDate=(dateString)=> {
                                                            const date = new Date(dateString);
                                                            const day = date.getDate();
                                                            const month = date.getMonth() + 1;
                                                            const year = date.getFullYear();
                                                            return `${day}/${month}/${year}`;
                                                            };
                                                            %>
                                                    <%= formatDate(row.cycle_course.registrationPeriod.startDate) %>
                                                    </td>
                                                    <td class="col-course-end"><%= formatDate(row.cycle_course.endDate) %></td>
                                                    <td class="col-course-category"><%= row.category %></td>
                                                    <td class="col-course-fee"><%= row.feeCoin %> (Xu) %></td>
                                                    <td class="col-course-detail"><a
                                                            href="/teacher/course/detail-course/<%= row._id %>">Chi
                                                            tiết</a></td>
                                                </tr>
                                                <% index++; %>
                                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
  
                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled">
                            <a class="page-link" href="javascript: void(0);" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="javascript: void(0);">1</a></li>
                        <li class="page-item"><a class="page-link" href="javascript: void(0);">2</a></li>
                        <li class="page-item"><a class="page-link" href="javascript: void(0);">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="javascript: void(0);">Next</a>
                        </li>
                    </ul>
  
                </div><!-- end col -->
  
            </div>
            <!-- end row -->
  
        </div> <!-- container-fluid -->
  
    </div> <!-- content -->
  
  </div>